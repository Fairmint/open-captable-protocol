{
    "name": "tap-cap-table",
    "version": "1.0.0-alpha.0",
    "private": true,
    "author": "Alex Palmer <alex@poet.network>, Victor Mimo <victor@poet.network>",
    "license": "MIT",
    "description": "Transfer Agent Protocol compliant cap table",
    "type": "module",
    "scripts": {
        "eslint": "eslint --cache --cache-location=node_modules/.cache/.eslintcache --fix",
        "lint": "yarn run eslint . --ext .js,.jsx,.ts,.tsx",
        "format": "prettier '**/*' --ignore-unknown --write",
        "generate": "yarn run generate:prisma",
        "generate:prisma": "prisma generate",
        "push": "yarn prisma db push",
        "prisma:studio": "prisma studio",
        "typecheck": "concurrently --raw yarn:typecheck:*",
        "typecheck:app": "tsc --noEmit",
        "typecheck:cypress": "tsc --noEmit -p cypress/tsconfig.json",
        "prepare": "husky install",
        "seed": "node test/seed.cjs",
        "seedPoet": "node test/seedPoet.cjs",
        "deseed": "node test/deseed.cjs",
        "validate-example-ocf-files": "cd ocf && yarn validate-example-ocf-files",
        "validate-poet-files": "cd ocf && yarn validate-poet-files",
        "validate-and-insert-example-ocf-files": "yarn validate-example-ocf-files && yarn seed",
        "validate-and-insert-poet-files": "yarn validate-poet-files && yarn seedPoet",
        "test-onchain-cap-table-local": "node custom-chain-scripts/capTable.cjs local",
        "test-onchain-cap-table-optimism-goerli": "node custom-chain-scripts/capTable.cjs optimism-goerli",
        "test-onchain-cap-table-factory-local": "node custom-chain-scripts/capTableFactory.cjs local",
        "test-onchain-cap-table-factory-optimism-goerli": "node custom-chain-scripts/capTableFactory.cjs optimism-goerli",
        "forge-deploy-captable-local": "cd chain && forge script script/CapTable.s.sol:CapTableDeployLocalScript --fork-url local --broadcast --verify -vvvv",
        "forge-deploy-captable-optimism-goerli": "cd chain && forge script script/CapTable.s.sol:CapTableDeployOptimismGoerli --rpc-url optimism_goerli --etherscan-api-key optimism_goerli_etherscan --broadcast --verify -vvvv",
        "forge-deploy-captable-factory-local": "cd chain && forge script script/CapTableFactory.s.sol:CapTableFactoryDeployLocalScript --fork-url local --broadcast --verify -vvvv",
        "forge-deploy-captable-factory-optimism-goerli": "cd chain && forge script script/CapTableFactory.s.sol:CapTableFactoryDeployOptimismGoerli --rpc-url optimism_goerli --etherscan-api-key optimism_goerli_etherscan --broadcast --verify -vvvv"
    },
    "dependencies": {
        "@prisma/client": "^5.0.0",
        "date-fns": "^2.28.0",
        "dotenv": "^16.3.1",
        "ethers": "^5.7.2",
        "solc": "^0.8.20"
    },
    "browserslist": [
        "defaults",
        "not IE 11",
        "maintained node versions"
    ],
    "devDependencies": {
        "@types/node": "^20.3.2",
        "@types/uuid": "^9.0.2",
        "eslint": "^8.21.0",
        "eslint-config-next": "^13.1.6",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "husky": "^8.0.1",
        "lint-staged": "^13.0.3",
        "prettier": "^2.7.1",
        "prisma": "^5.0.0",
        "solhint": "^3.4.1",
        "typescript": "^5.1.6",
        "uuid": "^9.0.0"
    },
    "prisma": {
        "schema": "schema/schema.prisma"
    }
}
